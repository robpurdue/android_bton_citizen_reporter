<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ReportActivity">


    <!-- USE FITS SYSTEM WINDOWS TO KEEP THE LAYOUT FROM RUNNING UNDER THE APP BAR -->
    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="match_parent"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:orientation="vertical"
        android:paddingTop="?android:attr/actionBarSize"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:fitsSystemWindows="true">

        <TextView
            android:id="@+id/report_text_view"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:autoSizeMaxTextSize="100sp"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeStepGranularity="2sp"
            android:autoSizeTextType="uniform"
            android:padding="15dp" />

        <Button
            android:id="@+id/injury"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Personal Injury" />

        <Button
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Downed Power Line" />

        <Button
            android:id="@+id/outage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Power Outage" />

        <Button
            android:id="@+id/fire"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fire" />

        <Button
            android:id="@+id/blocked"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Blocked Roadway" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>